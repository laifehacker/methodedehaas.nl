const stappen = [
  {
    nummer: '1',
    titel: 'Controleer uw Polis',
    beschrijving: 'Bekijk welke aanvullende verzekering u heeft en hoeveel wordt vergoed voor alternatieve geneeswijzen.'
  },
  {
    nummer: '2',
    titel: 'Bel uw Verzekeraar',
    beschrijving: 'Informeer specifiek naar vergoeding voor de Methode de Haas of manuele therapie bij alternatieve behandelaars.'
  },
  {
    nummer: '3',
    titel: 'Noteer de Voorwaarden',
    beschrijving: 'Vraag naar maximale vergoeding per behandeling, aantal behandelingen per jaar, en of verwijzing nodig is.'
  },
  {
    nummer: '4',
    titel: 'Ontvang Behandeling',
    beschrijving: 'Na elke behandeling ontvangt u van ons een correcte factuur die voldoet aan alle eisen van zorgverzekeraars.'
  },
  {
    nummer: '5',
    titel: 'Dien Declaratie In',
    beschrijving: 'Stuur de factuur naar uw zorgverzekeraar. Dit kan vaak digitaal via de app of website van uw verzekeraar.'
  },
  {
