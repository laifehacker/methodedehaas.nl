const categories = [
  {
    naam: 'Over de Methode',
    beschrijving: 'Leer alles over de Methode de Haas',
    artikelen: [
      { titel: 'Wat is de Methode de Haas?', href: '/kennisbank/wat-is-methode-de-haas' },
      { titel: 'Geschiedenis van de Methode', href: '/kennisbank/geschiedenis-methode-de-haas' },
