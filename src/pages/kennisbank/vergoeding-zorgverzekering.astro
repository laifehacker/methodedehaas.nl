const tips = [
  'Controleer jaarlijks of uw aanvullende verzekering nog optimaal is voor uw situatie',
  'Bewaar alle facturen en declaraties goed voor uw administratie',
  'Let op het maximum aantal behandelingen per kalenderjaar',
  'Sommige verzekeraars vereisen voorafgaande goedkeuring - check dit vooraf',
  'Bij twijfel: vraag uw verzekeraar om een schriftelijke bevestiging',
  'Verzamel eventuele verwijsbrieven of medische informatie die nuttig kan zijn'
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Vergoeding door Zorgverzekering - Methode de Haas",
  "description": "Alles over de vergoeding van behandelingen bij de Methode de Haas door uw zorgverzekering. Hoe declareren en wat wordt vergoed?",
  "author": {
    "@type": "Organization",
